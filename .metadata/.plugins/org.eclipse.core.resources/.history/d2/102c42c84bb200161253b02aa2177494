package aufgabe3;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.net.ServerSocket;
import java.net.Socket;

public class Server {

	public static void main(String[] args) throws IOException {
		// TODO Auto-generated method stub
		ServerSocket mySvrSocket;
		BufferedReader in;
		OutputStream out;

		mySvrSocket = new ServerSocket(14001);

		// Auf Verbindungsanfrage warten.
		Socket mySock = mySvrSocket.accept(); // -> Socket fuer die eigentliche
												// Verbindung
		for(int i=0; i< 20 ; i++){
		// I/O-Kanäle der Socket
		in = new BufferedReader(new InputStreamReader(mySock.getInputStream()));
		out = mySock.getOutputStream();

		// Kommunikation

			System.out.println(in.readLine());
			out.write(("Who's there?\n").getBytes());
			in.close();
			out.close();
		}
		// Verbindung schliessen

		mySock.close();

		// Server runterfahren
		mySvrSocket.close();
	}

}
