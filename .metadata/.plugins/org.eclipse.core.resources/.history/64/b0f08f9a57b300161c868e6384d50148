package mware_lib;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectOutputStream;
import java.io.OutputStream;
import java.net.Socket;
import java.net.UnknownHostException;

public class NameServiceStub extends NameService {

	Socket stubSocket;
	private BufferedReader In;
	private OutputStream Out;
	private ObjectOutputStream  objOut;

	public NameServiceStub(String host, int port) throws UnknownHostException, IOException {
		stubSocket = new Socket(host, port);

		In = new BufferedReader(new InputStreamReader(stubSocket.getInputStream()));
		Out = stubSocket.getOutputStream();
        objOut  = new ObjectOutputStream(skt.getOutputStream());

	}

	@Override
	public void rebind(Object servant, String name) {
		// Kommunikation
		try {
			Out.write((").getBytes());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	@Override
	public Object resolve(String name) {
		System.out.println("Called resolve in NameServiceStub");
		return null;
	}

}
